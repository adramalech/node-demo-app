{
  "name": "node-app-demo",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "tsc --noEmit && eslint --config .eslintrc.cjs \"**/*.js\" \"**/*.ts\" --fix --quiet --no-error-on-unmatched-pattern",
    "lint:verbose": "tsc && eslint --config .eslintrc.cjs \"**/*.js\" \"**/*.ts\" --fix --no-error-on-unmatched-pattern",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "tsc -w",
    "format": "prettier --config .prettierrc.cjs \"**/*.js\" \"**/*.ts\" --write",
    "start": "node ./dist/index.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,ts,md}": [
      "prettier --config .prettierrc.cjs \"**/*.js\" \"**/*.ts\" --write",
      "eslint --config .eslintrc.cjs \"**/*.js\" \"**/*.ts\" --fix --no-error-on-unmatched-pattern"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "dotenv": "^16.0.1",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
    "@types/prettier": "^2.7.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "jest": {
      "rootDir": "src",
      "collectCoverageFrom": [
          "**/*.(t|j)s"
      ],
      "transform": {
          ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
      },
      "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
      "moduleFileExtensions": [
          "ts",
          "js",
          "json"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
  }
}
