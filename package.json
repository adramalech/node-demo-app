{
    "name": "node-app-demo",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "tsc --noEmit && eslint  \"**/*.js\" \"**/*.ts\" --quiet --fix",
        "lint:verbose": "tsc && eslint  \"**/*.js\" \"**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "watch": "tsc -w",
        "prettier-format": "prettier --config .prettierrc.js \"**/*.js\" \"**/*.ts\" --write",
        "build:dev": "npm run lint:verbose",
        "build:prod": "npm run lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "./src/*.{js,ts,md}": [
            "prettier --write",
            "eslint src/*.{js,ts} --fix"
        ]
    },
    "dependencies": {
        "@koa/cors": "^3.1.0",
        "class-validator": "^0.12.2",
        "dotenv": "^8.2.0",
        "koa": "^2.13.0",
        "koa-bodyparser": "^4.3.0",
        "koa-helmet": "^6.0.0",
        "koa-jwt": "^4.0.0",
        "koa-router": "^9.4.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/jest": "^26.0.14",
        "@types/koa": "^2.11.5",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-helmet": "^6.0.0",
        "@types/koa-jwt": "^3.3.0",
        "@types/koa-router": "^7.4.1",
        "@types/koa__cors": "^3.0.2",
        "@types/node": "^14.11.10",
        "@types/prettier": "^2.1.5",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.13.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.5.3",
        "lint-staged": "^10.4.1",
        "prettier": "^2.1.2",
        "supertest": "^4.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^3.9.7"
    },
    "engines": {
        "node": "12.x.x",
        "npm": "6.x.x"
    }
}
