{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "Node16",
        "lib": ["ES2023"],
        "target": "ES2022",
        "moduleResolution": "Node16",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "outDir": "./dist",
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "declaration": true,
        "noEmit": true,
        "tsBuildInfoFile": "./incremental/node-demo-app.tsbuildinfo"
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ],
    "ts-node": {
        "esm": true
    }
}
