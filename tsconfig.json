{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2020"],
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "strict": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "incremental": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "downlevelIteration": true
    },
    "include": ["src/**/*"]
}
