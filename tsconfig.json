{
  "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2022"],
      "target": "ES2022",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "alwaysStrict": true,
      "strict": true,
      "noUnusedLocals": true,
      "baseUrl": ".",
      "incremental": true,
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "downlevelIteration": true
  },
  "include": ["src/**/*"]
}
