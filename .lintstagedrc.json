{
    "*.ts": [
        "tsc-files",
        "prettier --config .prettierrc.mjs \"**/*.js\" \"**/*.ts\" \"**/*.cjs\" \"**/*.mjs\" --write",
        "eslint './src/**' --ext .json,.md,.yml,.js,.cjs,.mjs,.ts -c .eslintrc.cjs --report-unused-disable-directives --fix --quiet"
    ],
    "*.{md,yml,json}": [
      "eslint './src/**' --ext .json,.md,.yml -c .eslintrc.cjs --report-unused-disable-directives --fix --quiet"
    ]
}